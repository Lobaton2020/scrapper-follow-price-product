<html lang="en">
<head>
    <!-- <meta> tags> -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.css">
    <meta charset="UTF-8">
    <title>Book Face</title>
</head>

<body>
    <div id="data-data">

    <h2 class="text-center my-4">Here the representation of the queies to see the product in MELI</h2><hr>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
            <table id="link1" class="display">
                <thead>
                    <tr>
                        <th>Price </th>
                        <th>Title</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data.link1}}
                    <tr>
                        <td>{{ this.price }}</td>
                        <td>{{ this.title }}</td>
                        <td>{{ this.date }}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            </div>
            <div class="col-md-6">

            <table id="link2" class="display">
                <thead>
                    <tr>
                        <th>Price </th>
                        <th>Title</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data.link2}}
                    <tr>
                        <td>{{ this.price }}</td>
                        <td>{{ this.title }}</td>
                        <td>{{ this.date }}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    </div>
    <script>
        function applyDatatable(){
            $('#link1').DataTable({
                "order": [[ 0, "asc" ]],
                "pageLength": 100
            });
                 $('#link2').DataTable({
                "order": [[ 0, "asc" ]],
                "pageLength": 100
            });
        }
        async function refreshData(){
            const div = document.createElement('div');
            const response = await fetch('/scrapper');
            const data = await response.text();
            div.innerHTML = data;
            document.getElementById('data-data').innerHTML = div.querySelector('#data-data').innerHTML;
            applyDatatable();
        }
        $(document).ready( function () {
            applyDatatable();
            setInterval(refreshData, 5000);

        });

    </script>
</body>
</html>